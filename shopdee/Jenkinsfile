pipeline {
    agent any 

    stages {
        stage('Build') {
            steps {
                script {
                    // สร้าง Docker image
                    sh 'docker build -t shopdee:latest .'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // รัน Docker container สำหรับการทดสอบ
                    sh 'docker run --rm shopdee:latest python manage.py test'
                }
            }
        }

        stage('Run Server') {
            steps {
                script {
                    // รัน Django server ใน Docker
                    sh 'docker run -d -p 8000:8000 shopdee:latest python manage.py runserver 0.0.0.0:8000'
                }
            }
        }
    }

    post {
        always {
            // ทำความสะอาด container
            sh 'docker stop $(docker ps -q --filter ancestor=shopdee:latest) || true'
            sh 'docker rmi shopdee:latest || true'
        }
    }
}
