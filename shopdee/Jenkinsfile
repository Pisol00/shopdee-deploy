pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'pisol00/shopdee:latest'
        DOCKER_CREDENTIALS = credentials('dockerhub') // ใช้ Docker Hub credentials
    }

    stages {
        stage('Start Jenkins') {
            steps {
                sh 'echo Starting Jenkins for Django....'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('./shopdee') { // เปลี่ยนไปที่ directory ของโปรเจค
                    sh 'echo "Running in $(pwd)"'
                    sh 'echo Starting to build the Docker image: $DOCKER_IMAGE'
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    sh 'echo $DOCKER_CREDENTIALS_PSW | docker login --username $DOCKER_CREDENTIALS_USR --password-stdin'
                    sh 'docker push $DOCKER_IMAGE'
                }
            }
        }

        stage('Clear Docker Components') {
            steps {
                script {
                    sh 'docker stop shopdee || true'  // หยุด container shopdee ถ้ามี
                    sh 'docker rm shopdee || true' // ลบ container shopdee ถ้ามี
                    sh 'docker rmi $(docker images -q) || true' // ลบ images ทั้งหมด
                    sh 'docker system prune -af' // ทำความสะอาด Docker
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh 'docker pull $DOCKER_IMAGE' // ดึง image ล่าสุด
                    sh 'docker run -d --name shopdee -p 8000:8000 $DOCKER_IMAGE' // รัน container
                    sh 'docker exec shopdee python manage.py migrate' // รัน migrations
                    sh 'docker exec -d shopdee gunicorn shopdee.wsgi:application --bind 0.0.0.0:8000' // รัน gunicorn
                }
            }
        }
    }

    post {
        always {
            sh 'docker logout' // ออกจากระบบ Docker
        }
    }
}
